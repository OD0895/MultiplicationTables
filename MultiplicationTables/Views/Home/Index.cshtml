@using MultiplicationTables.Models
@model MultiplyTableListVM

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-4"> Tablas de Multiplicar </h2>
</div>


<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-8 center">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <div class="col-sm-12">
                        @Html.TextBoxFor(p => p.numberTable, new { @class = "form-control", placeholder = "Ingresa un número", type = "number", @Value = "1" })
                        @Html.ValidationMessageFor(p => p.numberTable)
                    </div>
                </div>

                <div class="form-group text-center">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-primary" value="Multiplicar" />
                    </div>
                </div>

            }

            <div class="form-group">
                <div class="col-sm-12">
                    @if (ViewBag.showTable != null)
                    {
                        <h4>Tabla de Multiplicar del @ViewBag.numberTable</h4>
                        <div class="table-responsive">
                            <table border="1" class="table table-borderless">
                                <tr>
                                </tr>
                                @foreach (var p in this.Model.MultiplyTableList)
                                {
                                    <tr>
                                        <td align="center"> @ViewBag.numberTable</td>
                                        <td align="center">X</td>
                                        <td align="center">@p.multiplying</td>
                                        <td align="center">=</td>
                                        <td align="center">@p.result</td>
                                    </tr>
                                }
                            </table>
                        </div>

                    }
                </div>
            </div>


        </div>
    </div>
</div>
